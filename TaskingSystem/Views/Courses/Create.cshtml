@model TaskingSystem.Models.Course

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Courses" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="CourseCode" class="control-label"></label>
                <input asp-for="CourseCode" class="form-control mt-2" />
                <span asp-validation-for="CourseCode" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="CourseName" class="control-label"></label>
                <input asp-for="CourseName" class="form-control mt-2" />
                <span asp-validation-for="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ProfessorId" class="control-label">Professor</label>
                <select asp-for="ProfessorId" class="form-select mt-2 " asp-items="ViewBag.ProfessorUserName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-link mt-4" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
