@model TaskingSystem.Models.AssignedTask

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>AssignedTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AssignedTaskId" />
            <div class="form-group">
                <label asp-for="TaskId" class="control-label"></label>
                <select asp-for="TaskId" class="form-control" asp-items="ViewBag.TaskId"></select>
                <span asp-validation-for="TaskId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="TaskURL" class="form-control" />
            </div>
            <div class="form-group mt-4">
                <label asp-for="@Model.File" class="control-label"></label>
                <input asp-for="@Model.File" class="form-control" type="file" id="formFile">
                <span asp-validation-for="@Model.File" class="text-danger"></span>
            </div>
           <div class="form-group">
                <input type="hidden" asp-for="AssignedTaskDate" class="form-control mt-2" />
            </div>
             <div class="form-group">
                <input type="hidden" asp-for="AssignedTaskStudentId" class="form-control mt-2" asp-items="ViewBag.AssignedTaskStudentId">
            </div> 
            <div class="form-group mt-4">
                <input type="submit" value="Save" class="btn btn-primary mt-4" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-link mt-4" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
